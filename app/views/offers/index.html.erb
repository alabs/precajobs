<div id="content" class="full">

  <div id="front-slogan">
    <p id="slogan">9 de cada 10 ofertas precarias en Internet están aquí</p>
    <%= link_to '¡Agrega una oferta!', new_offer_path, :class => "btn primary" %>
  </div>

<%= link_to "¡Oferta precaria!", "javascript: window.open('http://192.168.0.194:8080/offers/new?offer_link=' + window.location.href ,'_blank');" %>
  <hr />

  <h2 class="title"><%= @title %></h2>
  
  <%= render :partial => "list", :locals => { :offers => @offers } %> 

  <%= will_paginate @offers, :renderer => BootstrapPaginationHelper::LinkRenderer %>

  <div id="column">
    <%= image_tag "http://placehold.it/160x600", :style => "display:inline;" %>
  </div>

  <span class="center">
    <%= link_to '¡Agrega una oferta!', new_offer_path, :class => "btn primary" %>
  </span>

</div>
