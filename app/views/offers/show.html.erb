<p id="notice"><%= notice %></p>

<div id="content" class="full">

 <h1 class="title"><%= link_to @offer.title, @offer.link %></h1>

 <div class="left">
   <%= link_to(image_tag(@offer.screenshot.url(:thumb)), @offer.screenshot.url, :class => "screenshot" ) %>
 </div>
 <%= @offer.summary %>
  
  <p class="left">
  <hr />
    <%= @offer.description %>
  </p>

</div>

<h2>Comentarios</h2>
<% if @offer.comments %>
  <ul>
  <% @offer.comments.each do |comment| %>
    <li>
      <b><%= comment.user.email %></b> dijo:
      <%= comment.body %>
    </li>
  <% end %>
  </ul>
<% else %>
  Sin comentarios
<% end %>

<h2> Comentar </h2>
<%= form_for :comment, :url => comment_offer_path do |f|  %>
  <%= f.text_area :body, :rows => "10", :class => "span15" %>
  <div class="actions">
    <%= f.submit "Crear comentario", :class => "btn primary" %>
  </div>
<% end %>


