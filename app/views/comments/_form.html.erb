<%= form_for :comment, :url => comment_offer_path, :html => { :class => "span5" } do |f|  %>
    <legend> Agregar un comentario </legend>
    <%= f.text_area :body, :class => "span4", :rows => 5  %>
    <% unless user_signed_in? %>
      <%= recaptcha_tags %>
    <% end %>
    <div class="actions action-sidebar">
      <%= f.submit "Agregar comentario", :class => "btn primary" %>
    </div>
  <% end %>
