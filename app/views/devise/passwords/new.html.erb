<div id="content">
  <h2>¿Olvidaste tu contraseña?</h2>
  
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="clearfix">
      <%= f.label :email, "Correo electrónico" %>
      <div class="input">
        <%= f.email_field :email, :autofocus => "autofocus" %>
      </div>
    </div>
  
    <div class="actions">
      <%= f.submit "Enviarme instrucciones para cambiar mi contraseña", :class => "btn primary" %>
    </div>
  <% end %>
</div>

<div class="sidebar">
  <ul>
    <li><%= render :partial => "devise/shared/links" %></li>
  </ul>
</div>
